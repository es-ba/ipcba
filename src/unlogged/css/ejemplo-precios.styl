html
  font-size 16px
  &[pos-productos=arriba]
    font-size 20px

letra_grande = 1.4rem
letra_mediana = 1.2rem
letra_chica = 1rem

ancho_tipo_precio = 8%
// ancho_tipo_precio = 48px

[pos-productos=arriba]
  .informante-visita
    grid-template-columns 100%

body
  margin 0px
.informante-visita
  display grid
  padding 0px
  margin 0px
  width 100%
  font-family Roboto, Arial, sans-serif
  border 0px
  grid-template-columns 33% 66%
  .caja-producto
    margin-top 8px
    margin-bottom 8px
    width 100%
    grid-column span 1
    grid-row span 1
    display grid
    grid-template-columns 1fr 24px
    align-self start
    border-top 0.5px solid #ddd
    padding-top 8px
    .producto
      font-weight bold
      font-size letra_mediana
    .observacion
      font-weight bold
      font-size letra_mediana
    .especificacion
      grid-column span 2
      font-size letra_chica
      padding-right 6px
  .caja-precios
    align-self start
    margin-top 8px
    margin-bottom 8px
    border-top 0.5px solid #ddd
    padding-top 8px
    .observaciones
      button
        width 60px
    .MuiButton-root
      min-width 16px
      font-size letra_grande 
      min-height 42px
      width 100%
    button
      padding 0px
      margin 0px
      text-align center
    [button-container]
      padding 0px
    table-layout fixed
    grid-column span 1
    grid-row span 1
    width 100%
    .nombre-atributo
      font-size letra_mediana
    td, th
      font-size letra_grande
      vertical-align middle
      &[puede-editar=yes]
        border-bottom 0.5px solid #3f51b5
        height 40px
      padding 2px
      overflow-x hidden
      overflow-wrap break-word
      div
        max-width 100%
        overflow-x hidden
        overflow-wrap break-word
      input
        padding-left 2px 
        width 100%
        font-size 100%
        border 0px solid white
    .flechaAtributos
      .MuiButton-root
        width 90%
    .atributo-anterior
      vertical-align bottom
    .atributo-actual
      padding 0px
      width 120px
      vertical-align bottom
      div
        display table-cell
      textarea
        width 100%
        height 100%
        font-size letra_grande
        font-family Roboto, Arial, Helvetica, sans-serif
    .flechaTP
      .MuiButton-root
          width 90%
      width 20px
    .precioAnterior
      text-align right
    .precio
      width 100px
      padding 0px
      text-align right
      div
        margin 2px
      .placeholder
        color #3f51b5
.hoja-ruta
  td
    font-size letra_grande
    padding 6px
.flecha-volver-hdr
  width 60px

main
  padding 60px 0

.menu-informante-visita
  .MuiButton-contained.Mui-disabled
    background-color #e0e0e0
  .MuiInputBase-input::placeholder
    color #fff
  .MuiInputBase-input
    color #fff
  .MuiGrid-root
    margin-left 10px
  .MuiListItemIcon-root
    font-size letra_grande
  .MuiButton-root
    text-transform none